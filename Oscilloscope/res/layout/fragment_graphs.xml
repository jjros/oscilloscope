<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/graphs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/graphs_title"
        android:textSize="12sp" 
        android:layout_alignParentTop="true"/>
	<ListView 
	  	android:layout_width="match_parent"
	  	android:layout_height="wrap_content"
	  	android:id="@+id/graphs_listOfGraphs"
	  	android:layout_below="@+id/graphs_title"
	  	android:layout_above="@+id/graphs_back_button">
	    
	</ListView>
	<TextView
        android:id="@+id/graphs_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center" 
        android:layout_alignParentBottom="true"/>
</RelativeLayout>